{
  "name": "ts",
  "private": true,
  "xo": {
    "extensions": [
      "js",
      "ts"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript"
      }
    ],
    "prettier": true
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/src/",
        "test/": "dist/test/"
      }
    }
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "ava": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-xo-typescript": "^0.26.0",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.10",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "xo": "^0.26.1"
  },
  "engines": {
    "node": "^13.9.0"
  }
}
